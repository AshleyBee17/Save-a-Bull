<?xml version="1.0" encoding="utf-8"?>
<!--The layout of each individual coupon card in the gallery-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item_coupon_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="175dp"
    android:layout_height="175dp"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coupon_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/colorGold"
            />

        <ImageButton
            android:id="@+id/coupon_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_margin="5dp"
            android:src="@drawable/pressable_favorite" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/coupon_border"
            android:layout_below="@id/coupon_favorite"/>


        <TextView
            android:id="@+id/company_name"
            android:textColor="@color/colorGreen"
            android:layout_margin="5dp"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_img"
            android:text="@string/company_name"/>


        <TextView
            android:id="@+id/coupon_desc"
            android:textColor="@color/colorGreen"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_name"
            android:text="@string/coupon_desc"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
