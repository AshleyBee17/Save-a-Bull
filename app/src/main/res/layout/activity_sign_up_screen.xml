<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SignUpScreen"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="172dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/bull_logo_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        tools:context=".SignUpScreen">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/validateFirstName"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/firstNameEntry"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/first_name"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/validateLastName"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/lastNameEntry"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/last_name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        tools:context=".SignUpScreen">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/validateUsername"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >
            <EditText
                android:id="@+id/usernameEntry"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/validatePassword"
            android:layout_width="165dp"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/passwordEntry"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/createAcctBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:layout_gravity="center"
        />

</LinearLayout>
